# Sentinel-Net Environment Configuration
# Copy this file to .env and fill in the values

# ===== DATABASE =====
# LOCAL DEVELOPMENT (Using JSON files)
DB_TYPE=local  # Options: local, postgresql, supabase

# POSTGRESQL (When ready to deploy)
# Uncomment below when you have Supabase connection string
# DB_TYPE=postgresql
# DATABASE_URL=postgresql://user:password@host:port/database

# ===== API CONFIGURATION =====
API_HOST=0.0.0.0
API_PORT=8000
API_ENV=development  # Options: development, staging, production

# ===== LOGGING =====
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_DIR=outputs/logs
MAX_LOG_SIZE_MB=100
LOG_BACKUP_COUNT=5

# ===== DATA CONFIGURATION =====
DATA_RAW_DIR=data/raw
DATA_PROCESSED_DIR=data/processed
DATA_CACHE_DIR=data/cache

# ===== MODEL CONFIGURATION =====
MODELS_OUTPUT_DIR=outputs/models
VECTORIZER_VOCABULARY_SIZE=1000

# ===== EXPERIMENT CONFIGURATION =====
SIMULATION_ROUNDS=500
TEST_SET_SIZE=0.1
VALIDATION_SET_SIZE=0.1
RANDOM_SEED=42

# ===== CONSENSUS CONFIGURATION =====
CONSENSUS_THRESHOLD=0.5
WEIGHT_REWARD_CORRECT=1.05
WEIGHT_PENALTY_WRONG=0.90
WEIGHT_REWARD_MINORITY=1.15
WEIGHT_PENALTY_BOTH_WRONG=0.85
WEIGHT_MIN=0.1
WEIGHT_MAX=5.0

# ===== FRONTEND =====
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_APP_NAME=Sentinel-Net

# ===== DEPLOYMENT (For later) =====
# RAILWAY_API_TOKEN=your_token_here
# VERCEL_TOKEN=your_token_here
# SUPABASE_PROJECT_URL=your_supabase_url
# SUPABASE_ANON_KEY=your_anon_key
